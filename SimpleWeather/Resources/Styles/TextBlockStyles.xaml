<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SimpleWeather.Resources.Styles">

	<Style x:Key="FontBase" TargetType="TextBlock">
		<Setter Property="Foreground" Value="{DynamicResource FontForeground}"/>
	</Style>
	<Style x:Key="PageTitle" TargetType="TextBlock" BasedOn="{StaticResource FontBase}">
		<Setter Property="FontSize" Value="18"/>
		<Setter Property="FontWeight" Value="Bold"/>
	</Style>
	<Style x:Key="MediumTitle" TargetType="TextBlock" BasedOn="{StaticResource FontBase}">
		<Setter Property="FontSize" Value="24"/>
	</Style>
	<Style x:Key="HugeTitle" TargetType="TextBlock" BasedOn="{StaticResource FontBase}">
		<Setter Property="FontSize" Value="56"/>
	</Style>
	<Style x:Key="Description" TargetType="TextBlock" BasedOn="{StaticResource FontBase}">
		<Setter Property="FontSize" Value="12"/>
	</Style>
	<Style x:Key="SmallText" TargetType="TextBlock" BasedOn="{StaticResource FontBase}">
		<Setter Property="FontSize" Value="9"/>
	</Style>

</ResourceDictionary>